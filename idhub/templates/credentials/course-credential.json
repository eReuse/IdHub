{
    "@context": [
      "https://www.w3.org/2018/credentials/v1",
      "https://idhub.pangea.org/credentials/base/v1",
      "https://idhub.pangea.org/credentials/course-credential/v1"
    ],
    "id": "{{ vc_id }}",
